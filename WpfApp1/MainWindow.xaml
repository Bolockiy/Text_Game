<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="GameText" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,10,0" Height="200" Width="460"/>
        <TextBox Name="PlayerInput" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,220,0,0" Width="300" TextChanged="PlayerInput_TextChanged"/>
        <Button Content="Submit" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="320,220,0,0" Width="150" Click="SubmitButton_Click"/>
    </Grid>
</Window>
